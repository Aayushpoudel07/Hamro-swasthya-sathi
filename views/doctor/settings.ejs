<div class="container mt-5">
    <h2 class="text-center">User Settings</h2>
    <% if (typeof message !== 'undefined' && message) { %>
        <p class="text-danger text-center text-bold"><%= message %></p> 
    <% } %>
    <div class="row">
        <div class="col-md-6">
    <!-- Change Password Form -->
    <div class="card p-4">
        <h4>Change Password</h4>
        
        <form id="changePasswordForm" action="/auth/change-password" method="POST" onsubmit="return validatePasswordForm()">
            <div class="mb-3">
                <label for="currentPassword" class="form-label">Current Password</label>
                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
            </div>
            <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Update Password</button>
        </form>
    </div>
</div>

<script>
    // Client-side form validation
    function validatePasswordForm() {
        const currentPassword = document.getElementById("currentPassword").value;
        const newPassword = document.getElementById("newPassword").value;
        const confirmPassword = document.getElementById("confirmPassword").value;

        // Check if the new password and confirm password match
        if (newPassword !== confirmPassword) {
            alert("New Password and Confirm Password do not match.");
            return false;
        }

        // Check if new password meets basic criteria (e.g., length, complexity)
        if (newPassword.length < 8) {
            alert("New password must be at least 8 characters long.");
            return false;
        }

        // Optionally, you can add more password validation checks here (e.g., requiring numbers, symbols, etc.)

        // If all checks pass, the form will be submitted
        return true;
    }
</script>

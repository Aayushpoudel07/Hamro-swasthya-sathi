<section class="py-5 doctor-details-section" style="background: linear-gradient(to right, #6a11cb, #2575fc); ">
    <div class="container">
        <div class="doctor-details">
            <div class="row justify-content-center">

                <!-- Doctor Information Column -->
                <div class="col-lg-5 mb-4">
                    <div class="doctor-card shadow-lg p-4 bg-white rounded-4 text-center">
                        <img src="<%= doctor.image || '/images/default-doctor.jpg' %>" alt="Doctor Image"
                            class="doctor-img rounded-circle mx-auto d-block shadow-lg"
                            style="width: 160px; height: 160px; object-fit: cover; border: 5px solid  #4db6ac">
                        <h2 class="mt-3 text-dark fw-bold">
                            <%= doctor.name %>
                        </h2>
                        <p class="text-primary fw-semibold">
                            <%= doctor.speciality %>
                        </p>
                        <p><i class="fas fa-phone"></i> <strong>Contact:</strong>
                            <%= doctor.contact %>
                        </p>
                        <p><i class="fas fa-map-marker-alt"></i> <strong>Address:</strong>
                            <%= doctor.address %>
                        </p>
                        <p class="text-muted"><strong>Description:</strong>
                            <%= doctor.description %>
                        </p>
                       
                    </div>
                </div>

                <!-- Appointment Booking Form Column -->
                <div class="col-lg-5 mb-4">
                    <!-- check login first -->
                    <% if (isLoggedIn) { %>

                        <div class="appointment-form shadow-lg p-4 bg-white rounded-4">
                            <h3 class="text-center fw-bold text-dark">Book an Appointment</h3>
                            <form action="/appointment" method="POST">
                                <input type="hidden" name="doctorId" value="<%= doctor.id %>">

                                <div class="mb-3">
                                    <label for="name" class="form-label fw-semibold">Your Name:</label>
                                    <input type="text" id="name" name="name" class="form-control rounded-3" value="<%= user.name %>" required>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label fw-semibold">Your Email:</label>
                                    <input type="email" id="email" name="email" class="form-control rounded-3" value="<%= user.email %>" required>
                                </div>

                                <div class="mb-3">
                                    <label for="contact" class="form-label fw-semibold">Your Contact:</label>
                                    <input type="number" id="contact" name="contact" value="<%= user.contact %>" class="form-control rounded-3"
                                        required>
                                </div>

                                <div class="mb-3">
                                    <label for="date" class="form-label fw-semibold">Preferred Date:</label>
                                    <input type="date" id="date" name="date" class="form-control rounded-3" required min="<%= new Date().toISOString().split('T')[0] %>">
                                </div>

                                <div class="mb-3">
                                    <label for="time" class="form-label fw-semibold">Preferred Time:</label>
                                    <input type="time" id="time" name="time" class="form-control rounded-3" required>
                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label fw-semibold">Reason for
                                        Appointment:</label>
                                    <textarea id="description" name="description" class="form-control rounded-3"
                                        rows="3"></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold">Book
                                    Appointment</button>
                            </form>
                        </div>
                        <% } else { %>
                            <div class="appointment-form shadow-lg p-4 bg-white rounded-4">
                                <h3 class="text-center fw-bold text-dark">Please login to book an appointment</h3>
                                <div class="card p-4">
                                    <h4 class="text-center mb-4">Login</h4>
                                    <form action="/auth/login" method="post">
                                        <div class="mb-3">
                                            <label for="loginEmail" class="form-label">Email address</label>
                                            <input type="email" name="email" class="form-control" id="loginEmail" placeholder="Enter your email" required>    
                                        </div>
                                        <div class="mb-3">
                                            <label for="loginPassword" class="form-label">password</label>
                                            <input type="password" name="password" class="form-control" id="loginPassword" placeholder="Enter your password" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Login</button>
                                        <p class="text-center mt-3">
                                            Don't have an account?Please register <a href="/auth/register">Register</a>
                                        </p>
                                
                                    </form>
                                </div>
                            </div>
                            <% } %>
                </div>

            </div>
        </div>
    </div>
</section>
<style>
    .doctor-card,
    .appointment-form {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .doctor-card:hover,
    .appointment-form:hover {
        transform: translateY(-5px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    }

    .doctor-img {
        transition: transform 0.3s ease-in-out;
    }

    .doctor-img:hover {
        transform: scale(1.1);
    }

    .doctor-details-section {
        margin-top: 4rem;
    }
</style>
<style>
    /* Hero Section Styling */
    .hero-section {
        position: relative;
        background: url('https://t4.ftcdn.net/jpg/02/70/36/25/360_F_270362596_kIpf2k7Q5PBjR5wWTp5qentfEeQnm5dM.jpg') no-repeat center center/cover;
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #fff;
        overflow: hidden;
    }

    /* Dark overlay for better readability */
    .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        /* Dark overlay */
    }

    /* Glassmorphism Effect */
    .hero-text {
        position: relative;
        z-index: 1;
        background: rgba(255, 255, 255, 0.15);
        padding: 30px;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        animation: fadeInUp 1s ease-in-out;
        max-width: 600px;
    }

    /* Smooth Fade-In Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Search Field Styling */
    .search-field {
        max-width: 500px;
        margin-top: 20px;
    }

    .search-field .form-control {
        border-radius: 30px 0 0 30px;
        padding: 12px;
        font-size: 16px;
    }

    .search-field .btn-primary {
        border-radius: 0 30px 30px 0;
        font-weight: bold;
        padding: 12px 20px;
        background: #f8d210;
        border: none;
        color: #000;
    }

    .search-field .btn-primary:hover {
        background: #ffcc00;
    }

    /* General Styles */
    body {
        font-family: 'Poppins', sans-serif;
    }

    /* Service Section */
    .card {
        border: none;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 12px;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
    }

    /* Icon Styling */
    .icon i {
        transition: transform 0.3s ease-in-out, color 0.3s ease-in-out;
    }

    .card:hover .icon i {
        transform: rotate(10deg) scale(1.1);
    }

    /* Category Section */
    .card-img {
        border-radius: 12px;
        transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
        height: 185px;
    }

    .card:hover .card-img {
        transform: scale(1.05);
        filter: brightness(80%);
    }

    .card-img-overlay {
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.7));
        border-radius: 12px;
    }

    /* CTA Section */
    .bg-primary {
        background: linear-gradient(135deg, #16404D , #B4EBE6);
        animation: glow 2s infinite alternate;
        border-radius: 0px;
    }

    @keyframes glow {
        from {
            box-shadow: 0px 0px 20px rgba(0, 123, 255, 0.6);
        }

        to {
            box-shadow: 0px 0px 30px rgba(0, 123, 255, 0.9);
        }
    }

    .btn-light {
        border-radius: 30px;
        transition: all 0.3s ease-in-out;
    }

    .btn-light:hover {
        background-color: #fff;
        color: #007bff;
        transform: scale(1.1);
    }
</style>


<!-- Section -->
<section class="py-5" style="background: linear-gradient(to right, #bbacca, #2575fc); color: white;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Meet Our Specialists</h2>
            <p class="text-light">Highly skilled doctors dedicated to your well-being.</p>
        </div>
        <div class="row">
            <% doctors.forEach((user, index) => { %>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card shadow-lg border-0 rounded-4 h-100 overflow-hidden">
                    <div class="position-relative">
                        <img src="/<%= user.image %>" class="card-img-top rounded-circle mx-auto d-block mt-3"
                            style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #6a11cb;"
                            alt="Doctor Image">
                    </div>
                    <div class="card-body text-center">
                        <a href="/list/<%= user.id %>" class="text-decoration-none">
                            <h5 class="card-title fw-bold text-dark"><%= user.name %></h5>
                        </a>
                        <p class="text-primary fw-semibold"><%= user.speciality %></p>
                        
                        <!-- <div class="d-flex justify-content-center gap-3">
                            <a href="#" class="text-primary"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="text-info"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="text-danger"><i class="fab fa-instagram"></i></a>
                        </div> -->
                        <div class="d-flex justify-content-center gap-3">
                            <p>
                                <i class="fas fa-map-marker-alt"></i> <%= user.address %>
                            </p>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 text-center pb-3">
                        <a href="/list/<%= user.id %>" class="btn btn-primary btn-sm rounded-pill px-4">View Profile</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>

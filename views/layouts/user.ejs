<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--Icons here-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .content {
            padding: 20px;
        }

        #header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 70px;
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
            z-index: 1050;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar {
            flex-grow: 1;
            margin-left: 20px;
        }

        .navbar-nav {
            margin: auto;
        }

        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            right: 0;
            left: auto;
        }

        .toggle-btn {
            display: none;
        }

        @media (max-width: 768px) {
            .toggle-btn {
                display: block;
                cursor: pointer;
            }

            .navbar-collapse {
                background-color: #fff;
                padding: 10px;
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }
        }
    </style>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <!-- datatables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <!-- Include Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    
</head>

<body>
    <!--Header here-->
    <div id="header">
        <div class="d-flex align-items-center">
            <div class="toggle-btn d-md-none">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </div>
            <h4 class="ms-3 mb-0">Dashboard</h4>
        </div>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav text-center">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#symptomSection">Symptoms</a></li>
                        <li class="nav-item"><a class="nav-link" href="#appointmentStatus">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link" href="#appointmentHistory">History</a></li>
                        <li class="nav-item"><a class="nav-link" href="#records">Records</a></li>

                    </ul>
                </div>
            </div>
        </nav>
        <div class="dropdown">
            <a class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" href="#" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-2" style="font-size: 1.5rem;"></i>
                <span>Profile</span>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" href="/auth/logout">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </li>
            </ul>
            
        </div>
    </div>

    <!--Content here-->
    <div class="content p-5 mt-5">
        <%- body %>
    </div>

    <footer class="text-center py-3 mt-5">
        <p>&copy; 2025 Hamro Swasthya Sathi. All Rights Reserved.</p>
    </footer>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
            $('#example2').DataTable();

        });
    </script>
    <!--Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</body>

</html>
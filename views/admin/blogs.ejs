<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body p-2">
            <h2 class="text-center mb-4">Published Blogs</h2>
            <a href="/admin/create-blog" class="btn btn-success mb-3">Create New Blog</a>

            <!-- Blog Table -->
            <table class="table table-bordered" id="example">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Tags</th>
                        <th>Published </th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% blogs.forEach((blog, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= blog.title %>
                            </td>
                            <td>
                                <%= blog.content.slice(0, 50) + '...' %>
                            </td>
                            <td>
                                <%= blog.tags %>
                            </td>
                            <td>
                                <%= blog.status %>
                            </td>
                            <td>
                                <%= blog.author ? blog.author.name : 'Unknown' %>
                            </td>

                            <td>
                                <a href="/blog/publish/<%= blog.id %>" class="btn btn-warning btn-sm">Publish</a>
                                <a href="/blog/delete/<%= blog.id %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Manage Appointments</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Doctor</th>
                    <th scope="col">Patient</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% appointments.forEach((appointment, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    
                    <td><%= appointment.doctor ? appointment.doctor.name : 'N/A' %></td> <!-- Display doctor name -->
                    <td><%= appointment.user ? `${appointment.user.name} (${appointment.user.email})` : 'N/A' %></td> <!-- Display patient name and email -->
                    <td><%= appointment.name || 'N/A' %></td>
                    <td><%= appointment.email || 'N/A' %></td>
                    <td><%= appointment.contact || 'N/A' %></td>
                    <td><%= new Date(appointment.date).toLocaleDateString() %></td>
                    <td><%= appointment.time %></td>
                    <td><%= appointment.description || 'N/A' %></td>
                    <td><%= appointment.status || 'Pending' %></td>
                    <td>
                        <!-- Action buttons -->
                        <a href="/admin/appointments/approve/<%= appointment.id %>" class="btn btn-success btn-sm">Approve</a>
                        <a href="/admin/appointments/reject/<%= appointment.id %>" class="btn btn-danger btn-sm">Reject</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</section>

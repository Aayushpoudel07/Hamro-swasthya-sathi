<div class="my-2">
    <div class="row">
        <div class="col-md-4">
            <h1>User Dashboard</h1>
            <form id="symptomForm">
                <div class="form-group">
                    <label for="question">Please describe your symptoms so that we can provide appropriate advice:</label>
                    <textarea id="question" name="question" rows="5" class="form-control" required></textarea>
                </div><br>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" id="clearButton" class="btn btn-secondary ml-2">Clear</button>
            </form>
            <br>
            <!-- Display AI Answer if available -->
            <div id="answerContainer" class="d-none">
                <div class="card shadow-sm border-0" style="background: #e6f4f1;">
                    <div class="card-header bg-success text-white d-flex align-items-center">
                        <i class="fas fa-robot me-2"></i>
                        <h5 class="mb-0 fw-bold">AI Recommended Precautions</h5>
                    </div>
                    <div class="card-body text-dark">
                        <p id="answerText" class="mb-0" style="font-size: 1rem; line-height: 1.6;">
                            Loading...
                        </p>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="col-md-8">
            <div class="container my-4 card shadow-sm">
                <h1 class="text-center mb-4">Symptom Summary & Expert Recommendations</h1>
                <div class="card text-white bg-info">
                    <div class="card-header">Your Question</div>
                    <div class="card-body">
                        <h5 class="card-title">Question:</h5>
                        <p><%= question %></p> <!-- Display user input -->
                    </div>
                </div>
                <div class="card shadow-sm border-0 mt-3" style="background-color: #e8f6f3; color: #2c3e50; border-left: 6px solid #17a2b8;">
                    <div class="card-header bg-info text-white d-flex align-items-center">
                        <i class="fas fa-notes-medical me-2"></i>
                        <h5 class="mb-0 fw-bold">Precautionary Advice</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="fw-semibold text-info mb-2"><i class="fas fa-shield-alt me-1"></i> Recommended Precautions:</h6>
                        <p class="mb-0" style="line-height: 1.6;"><%- answer %></p>
                    </div>
                </div>
                
            </div>
            
            <% if (doctors && doctors.length > 0) { %>
                <div class="container my-4 card shadow-sm">
                    <h1 class="text-center mb-4">Top 5 Doctors</h1>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Speciality</th>
                                <th scope="col">Contact</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% doctors.forEach((doctor, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= doctor.name %></td>
                                    <td><%= doctor.speciality %></td>
                                    <td><%= doctor.contact || 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No doctors found based on the given symptoms.</p>
            <% } %>
        </div>
    </div>
</div>

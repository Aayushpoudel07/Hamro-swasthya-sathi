<div class="my-2">
    <div class="row">
        <div class="col-md-4">
            <h1>User Dashboard</h1>
            <form id="symptomForm">
                <div class="form-group">
                    <label for="question">Please describe your symptoms so that we can provide appropriate advice:</label>
                    <textarea id="question" name="question" rows="5" class="form-control" required></textarea>
                </div><br>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" id="clearButton" class="btn btn-secondary ml-2">Clear</button>
            </form>
            <br>
            <!-- Display AI Answer if available -->
            <div id="answerContainer" class="alert alert-info d-none">
                <h5 class="mb-2 fw-semibold">AI Recommended Precautions</h5>
                <p id="answerText" class="mb-0">Loading...</p>
            </div>
        </div>
        <div class="col-md-8">
            <div class="container my-4 card shadow-sm">
                <h1 class="text-center mb-4">Symptom Summary & Expert Recommendations</h1>
                <div class="card text-white bg-info">
                    <div class="card-header">Your Question</div>
                    <div class="card-body">
                        <h5 class="card-title">Question:</h5>
                        <p><%= question %></p> <!-- Display user input -->
                    </div>
                </div>
                <div class="card text-white bg-warning mt-3">
                    <div class="card-header">Precautions</div>
                    <div class="card-body">
                        <h5 class="card-title">Precautions:</h5>
                        <p><%- answer %></p> <!-- Display AI-generated answer as HTML -->
                    </div>
                </div>
            </div>
            
            <% if (doctors && doctors.length > 0) { %>
                <div class="container my-4 card shadow-sm">
                    <h1 class="text-center mb-4">Top 5 Doctors</h1>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Speciality</th>
                                <th scope="col">Contact</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% doctors.forEach((doctor, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= doctor.name %></td>
                                    <td><%= doctor.speciality %></td>
                                    <td><%= doctor.contact || 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No doctors found based on the given symptoms.</p>
            <% } %>
        </div>
    </div>
</div>
